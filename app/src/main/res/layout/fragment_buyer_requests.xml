<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/requests_buyer_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="10dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/requests_buyer_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/requests_buyer_job_name"
            android:layout_alignStart="@id/requests_buyer_job_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/requests_buyer_job_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/requests_buyer_full_name"
            android:layout_alignStart="@id/requests_buyer_job_name"
            android:layout_marginBottom="8dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/requests_buyer_job_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/requests_buyer_job_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/requests_buyer_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/requests_buyer_job_price"
            android:layout_alignEnd="@id/requests_buyer_job_price"
            android:layout_marginBottom="4dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="18sp" />

        <Button
            android:id="@+id/requests_action_btn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/requests_buyer_job_price"
            android:layout_alignBottom="@id/requests_buyer_job_dates"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.design.card.MaterialCardView>
